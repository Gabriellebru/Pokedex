@model List<Pokedex.Models.Pokemon>
@{
    ViewData["URL"] = ViewBag.Usuario.Pokemon.Url_Sprite_front_default;
    ViewData["Nome"] = ViewBag.Usuario.Nome;
    ViewData["UsuarioID"] = ViewBag.Usuario.UsuarioID;
}


<h2>Pokedex (NatinalDex)</h2>
@Html.ActionLink("Meu Perfil", "Detalhes", "Usuario", new { id = ViewBag.Usuario.UsuarioID }, new { @class = "btn btn-outline-primary" })
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                Pokémon ID
            </th>
            <th>
                Sprite
            </th>
            <th>
                Nome Pokémon
            </th>
            <th>
                Detalhes
            </th>
    </thead>
    <tbody>
        @foreach (Pokemon item in Model)
        {
            <tr>
                <td>
                    @item.PokemonId
                </td>
                <td>
                    @if (item.Url_Sprite_front_default == null)
                    {
                    <div class="spinner-border" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                    }
                    else
                    {
                        <img height="60" src="@item.Url_Sprite_front_default" alt="Sprite Frontal" />
                    }
                </td>
                <td>
                    @item.Nome
                </td>
                <td>
                    @Html.ActionLink("Detalhes", "Detalhes", "Pokemon", new { id = item.PokemonId, usuarioid = ViewBag.Usuario.UsuarioID }, new { @class = "btn btn-outline-primary" })
                </td>
            </tr>

        }
    </tbody>
</table>



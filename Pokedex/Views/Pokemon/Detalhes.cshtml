@model Pokedex.Models.Pokemon

@{
    ViewData["Title"] = "Detalhes";
}

<h3>Detalhes</h3>

<div>
    <h4>@Model.Nome</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Sprite
        </dt>
        <dd class="col-sm-10">
            <img height="200"src="@Url.Content(Model.Url_Sprite_front_default)" alt="Sprite Frontal Default" />
            <img height="200"src="@Url.Content(Model.Url_Sprite_back_default)" alt="Sprite Frontal Default" />
            <img height="200"src="@Url.Content(Model.Url_Sprite_front_female)" alt="Sprite Frontal Feminino" />
            <img height="200"src="@Url.Content(Model.Url_Sprite_back_female)" alt="Sprite Frontal Masculino" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria)
        </dd>
        <dt class="col-sm-2">
            Base De Experiência
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BaseExperiencia)
        </dd>
        <dt class="col-sm-2">
            Peso
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Peso) Kg
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Altura)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Altura) cm
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo1)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tipo1)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo2)
        </dt>
        <dd class="col-sm-10">

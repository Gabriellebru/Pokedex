        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Habilidade1)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Habilidade2)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Habilidade2)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movimento1)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movimento1)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movimento2)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movimento2)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movimento3)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movimento3)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movimento4)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movimento4)

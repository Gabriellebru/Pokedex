@model Pokedex.Models.Pokemon

@{
    ViewData["Title"] = "Detalhes";
    ViewData["URL"] = ViewBag.Usuario.Pokemon.Url_Sprite_front_default;
    ViewData["Nome"] = ViewBag.Usuario.Nome;
    ViewData["UsuarioID"] = ViewBag.Usuario.UsuarioID;
}

<h3>Detalhes</h3>
<br />

<div>
    @Html.ActionLink("Meu Perfil", "Detalhes", "Usuario", new { id = ViewBag.usuarioid }, new { @class = "btn btn-outline-primary" })
    @Html.ActionLink("Pokédex", "Visualizar", "Pokemon", new { id = ViewBag.usuarioid }, new { @class = "btn btn-outline-danger" })
</div>

<div>
    <hr />
<h4>@Model.Nome</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Sprite
        </dt>
        <dd class="col-sm-10">
            <img height="200" src="@Url.Content(Model.Url_Sprite_front_default)" alt="Sprite Frontal Default" />
            <img height="200" src="@Url.Content(Model.Url_Sprite_back_default)" alt="Sprite Frontal Default" />
            <img height="200" src="@Url.Content(Model.Url_Sprite_front_female)" alt="Sprite Frontal Feminino" />
            <img height="200" src="@Url.Content(Model.Url_Sprite_back_female)" alt="Sprite Frontal Feminino" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            Descrição
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria)
        </dd>
        <dt class="col-sm-2">
            Base De Experiência
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BaseExperiencia)
        </dd>
        <dt class="col-sm-2">
            Peso
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Peso) Kg
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Altura)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Altura) cm
        </dd>
        <dt class="col-sm-2">
          Tipo 1
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tipo1)
        </dd>
        <dt class="col-sm-2">
            Tipo 2
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tipo2)
        </dd>
        <dt class="col-sm-2">
           Habilidade 1
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Habilidade1)
        </dd>
        <dt class="col-sm-2">
            Habilidade 2
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Habilidade2)
        </dd>
        <dt class="col-sm-2">
           Movimento 1
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movimento1)
        </dd>
        <dt class="col-sm-2">
            Movimento 2
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movimento2)
        </dd>
        <dt class="col-sm-2">
            Movimento 3
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movimento3)
        </dd>
        <dt class="col-sm-2">
            Movimento 4
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movimento4)
        </dd>

    </dl>
</div>


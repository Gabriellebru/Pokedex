@model Pokedex.Models.Usuario
 
@{
    ViewData["Title"] = "Criar";

}

<h1>Criar</h1>
<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar"autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                Usuário de Acesso
                <input asp-for="UsuarioAcesso" class="form-control" />
                <span asp-validation-for="UsuarioAcesso" class="text-danger"></span>
            </div>
            <div class="form-group">
                Senha Acesso
                <input type="password" asp-for="SenhaAcesso" class="form-control" />
                <span asp-validation-for="SenhaAcesso" class="text-danger"></span>
            </div>
            <div class="form-group">
                Selecione um Pokémon
                <select asp-for="PokemonId" class="form-control">
                    <option hidden selected disabled>
                        Selecione um Pokémon
                    </option>
                    @foreach (Pokemon pokemon in ViewBag.Pokemons)
                    {
                        <option value="@pokemon.PokemonId">@pokemon.Nome</option>
                    }
                </select>
                <span asp-validation-for="PokemonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Voltar a Lista de Usuários", "Visualizar", "Usuario", null, new { @class = "btn btn-outline-primary"})
</div>

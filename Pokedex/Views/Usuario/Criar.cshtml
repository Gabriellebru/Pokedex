@model Pokedex.Models.Usuario

@{
    ViewData["Title"] = "Criar";
}

<h1>Criar</h1>

<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioAcesso" class="control-label"></label>
                <input asp-for="UsuarioAcesso" class="form-control" />
                <span asp-validation-for="UsuarioAcesso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SenhaAcesso" class="control-label"></label>
                <input type="password" asp-for="SenhaAcesso" class="form-control" />
                <span asp-validation-for="SenhaAcesso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PokemonId" class="control-label"></label>
                <input asp-for="PokemonId" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-primary" asp-action="Visualizar">Voltar a lista</a>
</div>


@model Pokedex.Models.Usuario

@{
    ViewData["Title"] = "Detalhes";
}

<h3>Meu Perfil</h3>

<div>
    <h4>Bem vindo @Model.Nome</h4>
<div>
    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.UsuarioID">Editar informações</a>
</div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UsuarioAcesso)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuarioAcesso)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SenhaAcesso)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SenhaAcesso)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PokemonId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PokemonId)
        </dd>
        <dt class="col-sm-2">
            Seu Pokemon
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pokemon.Nome)
        </dd>
        <dd>
            @Html.ActionLink("Detalhes do Pokemon", "Detalhes", "Pokemon", new { id = Model.Pokemon.PokemonId})
        </dd>
    </dl>
</div>

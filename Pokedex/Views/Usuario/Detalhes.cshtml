@model Pokedex.Models.Usuario

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes</h1>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UsuarioAcesso)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuarioAcesso)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SenhaAcesso)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SenhaAcesso)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PokemonId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PokemonId)
        </dd>
        <dt class="col-sm-2">
            Nome Pokemon
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pokemon.Nome)

@model Pokedex.Models.Usuario

@{ 
    ViewData["Title"] = "Editar";
    ViewData["URL"] = Model.Pokemon.Url_Sprite_front_default;
    ViewData["Nome"] = Model.Nome;
    ViewData["UsuarioID"] = Model.UsuarioID;
}

<h1>Editar Usuário</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar"autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UsuarioID" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                Usuário De Acesso
                <input asp-for="UsuarioAcesso" class="form-control" />
                <span asp-validation-for="UsuarioAcesso" class="text-danger"></span>
            </div>
            <div class="form-group">
                Senha De Acesso
                <input asp-for="SenhaAcesso" type="password" class="form-control" />
                <span asp-validation-for="SenhaAcesso" class="text-danger"></span>
            </div>
            <div class="form-group">
                Nome do Pokémon
                <select asp-for="PokemonId" class="form-control">
                    <option selected disabled hidden>Selecione um Pokemon</option>
                    @foreach (Pokemon pokemon in ViewBag.Pokemons)
                    {
                        <option value="@pokemon.PokemonId">@pokemon.Nome</option>
                    }
                </select>
                <span asp-validation-for="PokemonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                @Html.ActionLink("Voltar ao meu perfil", "Detalhes", "Usuario", new { id = Model.UsuarioID }, new { @class="btn btn-primary"})
            </div>
        </form>
    </div>
</div>
@model Pokedex.Models.Usuario

@{
    ViewData["Title"] = "Criar";
}

<h1>Criar novo usuário</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Cadastro"autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioAcesso" class="control-label"></label>
                <input asp-for="UsuarioAcesso" class="form-control" />
                <span asp-validation-for="UsuarioAcesso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SenhaAcesso" class="control-label"></label>
                <input type="password" asp-for="SenhaAcesso" class="form-control" />
                <span asp-validation-for="SenhaAcesso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PokemonId" class="control-label"></label>
                <select asp-for="PokemonId" class="form-control" id="selectpokemon">
                    <option selected disabled hidden>Selecione um Pokemon</option>
                    @foreach (Pokemon pokemon in ViewBag.Pokemons)
                    {
                        <option value="@pokemon.PokemonId">@pokemon.Nome</option>
                    }
                </select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

